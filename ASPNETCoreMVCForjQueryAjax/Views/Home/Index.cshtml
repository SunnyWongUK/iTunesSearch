    <style>

        .header {
            top: 5px;
            left: 5px;
            right: 100px;
            bottom: 5px;
            position: absolute;
            /*width: 1300px;
            height: 50px;*/
            /*background-color: lightblue*/
        }

        .header1 {
            top: 80px;
            left: 5px;
            right: 5px;
            bottom: 5px;
            width: 1300px;
            height: 550px;
            position: absolute
        }

        .header2 {
            max-height: 100%;
            overflow: auto
        }

        .progressContainer {
            width: 100%;
            height: 8px;
            background: #ccc
        }

        .progressBar {
            height: 8px;
            background: #04AA6D;
            width: 0%
        }

        body {
            margin: 0;
            font-family: Arial, Helvetica, sans-serif
        }

        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%
        }

        td, th {
            border: 0px solid #dddddd;
            text-align: left;
            padding: 8px
        }

        tr:nth-child(even) {
            background-color: lightblue
        }

        .progressContainer {
            width: 100%;
            height: 8px;
            background: #ccc
        }

        .progressBar {
            height: 8px;
            background: #04AA6D;
            width: 0%
        }

        .margin {
            margin-top: 5px;
            margin-left: 5px;
            margin-right: 5px;
            margin-bottom: 5px            
        }

        .margin20 {
            margin-top: 20px;
            margin-left: 20px;
            margin-right: 20px;
            margin-bottom: 20px
        }

        #backBtn {
            display: none;
            position: fixed;
            bottom: 20px;
            right: 30px;
            z-index: 99;
            font-size: 18px;
            border: none;
            outline: none;
            background-color: red;
            color: white;
            cursor: pointer;
            padding: 15px;
            border-radius: 4px
        }

            #backBtn:hover {
                background-color: #555
            }
    </style>
</head>
<body>

    <div id="view">
        <div class="panel panel-primary">
            <div class="margin">

                <h2>iTunes Search</h2>

                <label for="name">Artist Name:</label>
                <input id="name" type="text" name="name"><br>

                <div class="form-check">
                    <input id="album" class="margin" type="checkbox" name="album" value="album" checked>
                    <label class="form-check-label" for="album">Album</label>
                </div>

                <div class="form-check">
                    <input id="song" class="margin" type="checkbox" name="song" value="song" checked>
                    <label class="form-check-label" for="song">Song</label><br>
                </div>

                <input id="btnGet" class="btn btn-primary" type="button" value="Retrieve" v-on:click="view" /><br>

                <label class="margin">
                    Number of iTunes Search Result: {{count}}
                </label><br>

                <label class="form-check-label, margin">
                    Number of iTunes Search Result Show up on the Screen: <label id="SearchResultShowUp">0</label>
                </label>
            </div>
        </div>

        <table id="table" class="table table-bordered">
            <tr>
                <th>Artist Name</th>
                <th>Kind</th>
                <th>Collection Name</th>
                <th>Track Name</th>
                <th>Collection Censored Name</th>
                <th>Track Censored Name</th>
                <th>Artist View Url</th>
            </tr>
            <tr v-for="a in appData">
                <td>{{a.artistName}}</td>
                <td>{{a.kind}}</td>
                <td>{{a.collectionName}}</td>
                <td>{{a.trackName}}</td>
                <td>{{a.collectionCensoredName}}</td>
                <td>{{a.trackCensoredName}}</td>
                <td>{{a.artistViewUrl}}</td>
            </tr>
        </table>
    </div>

    <button id="backBtn" onclick="GoToTop()" title="Go to top">Top</button>

    <script>
        window.onscroll = function () {
            LoadData(window.json, window.table, RowNoAtPage(), document.getElementById("backBtn"), 250)
        };
        Model.View();
    </script>
</body>
</html>
